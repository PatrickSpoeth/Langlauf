import uuid
import datetime

'''
Created on 04.05.2015

@author: Patrick Spoeth
'''


class cParticipant(object):
    '''
    classdocs
    '''


    def __init__(self, sFirstName="", sLastName="", sTeam=""):
        '''
        Constructor
        '''
        # eindeutige ID
        self.__uuid = uuid.uuid4()
        
        self._firstName = sFirstName
        self._lastName = sLastName
        self._team = sTeam
        
        self._birthday = datetime.date()
        
    def getUuid(self):
        '''
        get participant's UUID 
        '''
        return self.__uuid
    
    def getFirstName(self):
        return self._firstName
    
    def getLastName(self):
        return self._lastName
    
    def getFullName(self):
        return '%s %s'%(self.getFirstName(), self.getLastName())
    
    def getBirthdayYear(self):
        return self._birthday.year
    
    def getBirthdayMonth(self):
        return self._birthday.month
    
    def getBirthdayDay(self):
        return self._birthday.day